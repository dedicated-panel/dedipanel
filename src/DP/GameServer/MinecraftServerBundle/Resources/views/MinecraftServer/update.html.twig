{% extends "::layout.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_minecraft_index'), 'minecraft.title.minecraft'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'minecraft.title.edit'|trans }}</h2>
    
    <form id="form-update" action="{{ path('dedipanel_minecraft_update', { 'id': minecraft.id }) }}" method="post" {{ form_enctype(form) }} class="form-edit">
        {{ form_widget(form) }}
    </form>
    
    <div class="form-actions">
        {{ dedipanel_actions.update(path('dedipanel_minecraft_show', {'id': minecraft.id})) }}
        {% if is_granted('ROLE_DP_GAME_MINECRAFT_DELETE') %}
            {{ dedipanel_buttons.delete(path('dedipanel_minecraft_delete', {'id': minecraft.id})) }}
            {{ dedipanel_buttons.delete(path('dedipanel_minecraft_delete', {'id': minecraft.id, 'fromMachine': true}), 'dedipanel.full_delete'|trans) }}
        {% endif %}
    </div>
{% endblock %}
