SCREEN_NAME="{{ screenName }}"
STATUS=`ps aux | grep SCREEN | grep "$SCREEN_NAME " | wc -l`

case "$1" in
    start)
        if [ $STATUS -eq 0 ]; then
            echo "starting "
            cd {{ binDir }}
            
            {% if core is not empty %}
                screen -dmS $SCREEN_NAME taskset -c {{ core }} ./{{ bin }} -game {{ launchName }} +ip {{ ip }} -port {{ port }} +maxplayers {{ maxplayers }} +map {{ startMap }} -autoupdate
            {% else %}
                screen -dmS $SCREEN_NAME ./{{ bin }} -game {{ launchName }} +ip {{ ip }} -port {{ port }} +maxplayers {{ maxplayers }} +map {{ startMap }} -autoupdate
            {% endif %}
            
            echo "."
        fi
        
        exit ${?}
    ;;

    stop)
        if [ $STATUS -ne 0 ]; then
            echo "stopping"
            PID=`ps aux | grep SCREEN | grep "$SCREEN_NAME " | awk '{print $2}'`
            kill $PID
            echo "."
        fi

        exit ${?}
    ;;

    restart)
        $0 stop
        sleep 1
        $0 start

        exit ${?}
    ;;

    status)        
        if [ $STATUS -eq 0 ]; then
            echo "Not running."
        else
            echo "Started."
        fi
    ;;
    
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit ${?}
    ;;
esac