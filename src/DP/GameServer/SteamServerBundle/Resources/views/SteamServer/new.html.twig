{% extends "::layout.html.twig" %}

{% block title %}
    <a href="{{ path('steam') }}"> 
        <div class="fsBack" aria-hidden="true" data-icon="&#x29;" title="{{ 'steam.back'|trans }}"></div>
            </a>
        <p>{{ 'steam.title'|trans }}</p>
{% endblock %}
        
{% block content %}
<legend>{{ 'steam.add'|trans }}</legend>

    <form action="{{ path('steam_create') }}" method="post" {{ form_enctype(form) }}>
       <fieldset id="validation">	
            {{ form_widget(form) }}
            
            <div>
                <label for="isAlreadyInstalled" class="required">{{ 'game.isAlreadyInstalled'|trans }}</label>
                <input type="radio" name="install" value="0"/> {{ 'game.yes'|trans }} 
                <input type="radio" name="install" value="1" checked="checked" /> {{ 'game.no'|trans }}
            </div>
           
            <div class="form-actions">
                <button type="submit"  class="btn btn-primary">{{ 'game.addButton'|trans }}</button>
            </div>
        </fieldset>	
    </form>
{% endblock %}