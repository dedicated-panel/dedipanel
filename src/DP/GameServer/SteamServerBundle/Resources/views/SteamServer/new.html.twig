{% extends "::layout.html.twig" %}

{% form_theme form _self %}
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul>
        {% for error in errors %}
            <li>{% spaceless %}
                {% autoescape false %}
                    {{ error.message }}
                {% endautoescape %}
            {% endspaceless %}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block title %}
    <a href="{{ path('steam') }}"> 
        <span class="icon" data-icon="&#x29;" title="{{ 'steam.back'|trans }}"></span>
    </a>
    
    {{ 'steam.title'|trans }}
{% endblock %}
        
{% block content %}
    <h2>{{ 'steam.add'|trans }}</h2>

    <form action="{{ path('steam_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <div class="form-actions">
            <button type="submit"  class="btn btn-primary">{{ 'game.addButton'|trans }}</button>
        </div>
    </form>
{% endblock %}