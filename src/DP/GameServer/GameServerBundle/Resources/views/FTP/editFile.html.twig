{% extends "::layout.html.twig" %}

{% block bundleStylesheets %}
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/dpgameserver/css/game.css') }}" />
{% endblock %}

{% block title %}
    <a href="{{ path(baseRoute ~ '_ftp_show', {id: sid, path: dirPath}) }}"> 
        <span class="icon" data-icon="&#x29;" title="{{ 'game.back'|trans }}"></span>
    </a>
    
    {{ (baseRoute ~ '.title')|trans }}
{% endblock %}

{% block content %}    
    <h2>{{ 'game.ftp.editTitle'|trans }}</h2>
    
    <ul id="top-nav" class="nav nav-tabs">
        <li>
            <a href="{{ path(baseRoute ~ '_ftp_add', {'id': sid, 'path': dirPath}) }}">
                {{ 'game.ftp.addFile'|trans }}
            </a>
        </li>
    </ul>
    
    <form action="{{ path(baseRoute ~ '_ftp_edit', {id: sid, path: path}) }}" method="post" class="form-ftp">
        {{ form_widget(form) }}

        <div class="form-actions contains-delete">
            <button type="submit" class="btn btn-primary">
                {{ 'game.edit'|trans }}
            </button>
            <button type="submit" class="btn btn-danger" form="delete-form">
                {{ 'game.ftp.deleteFile'|trans }}
            </button>
        </div>
    </form>
    
    <form action="{{ path(baseRoute ~ '_ftp_delete', {id: sid, path: path}) }}" method="post" class="form-ftp" id="delete-form">
        {{ form_widget(del_form) }}
    </form>
{% endblock %}