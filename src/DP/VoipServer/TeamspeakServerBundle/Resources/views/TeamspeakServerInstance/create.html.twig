{% extends "::layout.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}

{% set serverId = app.request.get('serverId') %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_teamspeak_instance_index', {serverId: serverId }), 'teamspeak.title.teamspeak'|trans) }}
{% endblock %}
        
{% block content %}
    <h2>{{ 'teamspeak.instance.title.add'|trans }}</h2>

    {{ dedipanel_flashes.all() }}

    <form action="{{ path('dedipanel_teamspeak_instance_create', {serverId: serverId }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        {{ dedipanel_actions.create() }}
    </form>
{% endblock %}