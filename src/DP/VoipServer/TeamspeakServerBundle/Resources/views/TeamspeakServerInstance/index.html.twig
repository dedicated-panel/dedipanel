{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}

{% set serverId = app.request.get('serverId') %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_teamspeak_index'), 'teamspeak.instance.title.teamspeak'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'teamspeak.instance.title.index'|trans }}</h2>

    <ul id="top-nav" class="nav nav-tabs">
        {% if is_granted('ROLE_DP_VOIP_TEAMSPEAK_INSTANCE_CREATE') %}
        <li>
            {{ sylius_buttons.create(path('dedipanel_teamspeak_instance_create', {serverId: serverId}), 'teamspeak.instance.add'|trans) }}
        </li>
        {% endif %}

        {% if is_granted('ROLE_DP_VOIP_TEAMSPEAK_UPDATE') %}
        <li>
            {{ sylius_buttons.edit(path('dedipanel_teamspeak_update', {id: serverId, fromMachine: true}), 'teamspeak.edit'|trans) }}
        </li>
        {% endif %}

        {% if is_granted('ROLE_DP_VOIP_TEAMSPEAK_DELETE') %}
        <li>
            {{ sylius_buttons.delete(path('dedipanel_teamspeak_delete', {id: serverId, fromMachine: true}), 'teamspeak.instance.delete_server'|trans) }}
        </li>
        {% endif %}
    </ul>

    {{ dedipanel_flashes.all() }}

    {% for entity in instances %}
        {% set online = entity.query.isOnline and entity.query.isInstanceOnline(entity.instanceId) %}

        <a href="{{ path('dedipanel_teamspeak_instance_show', {id: entity.id, serverId: serverId}) }}">
            {{ entity.name }}
        </a> -

        {% if online %}
            Running
        {% else %}
            Stopped
        {% endif %}

        {% if entity.isInstallationEnded %}
            {% include 'DPTeamspeakServerBundle:TeamspeakServerInstance:actionBar.html.twig' with {show: true, online: online, instance: entity} %}
        {% endif %}

        {% if online %}
            {{ entity|ts_viewer|raw }}
        {% endif %}
    {% endfor %}
{% endblock %}
