{% extends "::layout-online.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}
{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_teamspeak_index'), 'teamspeak.title.teamspeak'|trans) }}
{% endblock %}
        
{% block body %}
    <h2>{{ 'teamspeak.title.add'|trans }}</h2>

    {{ dedipanel_flashes.all() }}

    <form action="{{ path('dedipanel_teamspeak_create') }}" method="post" {{ form_enctype(form) }} id="form-create" class="form-horizontal">
        {{ form_errors(form) }}

        {{ form_row(form.machine) }}
        {{ form_row(form.dir) }}
        {{ form_row(form.voice_port) }}
        {{ form_row(form.query_port) }}
        {{ form_row(form.query_password) }}
        {{ form_row(form.filetransfer_port) }}
        {{ form_row(form.licence_file) }}
        {{ form_row(form.alreadyInstalled) }}

        {{ form_rest(form) }}

        {{ dedipanel_actions.create() }}
    </form>
{% endblock %}
