{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:actions.html.twig' as sylius_actions %}
{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_machine_show', {'id': machine.id}), 'machine.title.machine'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'machine.title.edit'|trans }}</h2>

    <form action="{{ path('dedipanel_machine_update', { 'id': machine.id }) }}" method="post" class="form-edit">    
        {{ form_widget(form) }}
        {{ sylius_actions.update(path('dedipanel_machine_show', {'id': machine.id})) }}    
    </form>
    
    {% if is_granted('ROLE_DP_ADMIN_MACHINE_DELETE') %}
        {{ sylius_buttons.delete(path('dedipanel_machine_delete', {'id': machine.id})) }}
    {% endif %}
{% endblock %}
