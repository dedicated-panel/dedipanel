{% extends "::layout.html.twig" %}

{% block title %}
    {{ 'plugin.title.plugin'|trans }}
{% endblock %}

{% block content %}
    <h2>{{ 'dedipanel.title.confirm_delete'|trans }}</h2>

    <form action="{{ app.request.requestUri }}" method="post" class="delete-action-form" novalidate>
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="confirmed" value="1">
        <div class="form-actions">
            <button class="btn btn-danger" type="submit">
                <i class="glyphicon glyphicon-trash"></i> <span>{{ 'dedipanel.actions.confirm_delete'|trans }}</span>
            </button>
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-info"><i class="glyphicon glyphicon-remove"></i> {{ 'sylius.cancel'|trans }}</a>
        </div>
    </form>
{% endblock %}