<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />

        <title>DediPanel</title>
        <link rel="shortcut icon" href="{{ asset('images/footer/logo-min.png') }}" />
        {% block stylesheets %}{% endblock %}
	</head>
    
    <body>
        <header>
            <div id="logo">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}<a href="{{ path('_welcome') }}">&nbsp;</a>{% endif %}
            </div>

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<div id="profil">
				<ul id="mprofil">
					<li><span class="iprofil">X</span>
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'menu.logout'|trans }}
                        </a>
                    </li>		
					<li><span class="iprofil">U</span><a href="#">Profil</a>
						<ul>
							{# <li>
								<span class="ismprofil">K</span>
								<a href="{{ path('sonata_user_profile_show') }}" id="profil-detail">Info Compte</a>
							</li> #}
							<li class="sousmenu">
								<span class="ismprofil">S</span>
								<a href="{{ path('sonata_user_profile_edit_authentication') }}" id="profil-option">Options</a>
							</li>
							{# <li>
								<span class="ismprofil">@</span>
								<a href="" id="profil-note">Notifications</a>
							</li>
							<li>
								<span class="ismprofil">u</span>
								<a href="" id="profil-stat">Statistiques</a> 
							</li> #}
						</ul>
					</li>
				</ul>
            </div>		
            <div class="clear"></div>

            <ul class="menu">
                <li><a href="{{ path('user_menu') }}">
                        <span class="icone">¹</span>
                        <div class="content"><h2 class="main">Acceuil</h2><h3 class="sub">Acceuil</h3></div>
                    </a> </li>
                <li><a href="{{ path('game_menu') }}">
                        <span class="icone">_</span>
                        <div class="content"><h2 class="main">Jeux</h2><h3 class="sub">Serveurs de jeux</h3></div>
                    </a> </li>
