{# Custom #}
{% block form_row %}
{% spaceless %}
    <div class="clearfix">
        {{ form_label(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        {{ label|trans({}, translation_domain) }}
        
        {% if required %}
            <span class="symfony-form-required" title="This field is required">*</span>
        {% endif %}
    </label>
{% endspaceless %}
{% endblock form_label %}

{% block button_row %}
{% spaceless %}
    <div class="well form-actions">
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock button_row %}

{% block dp_security_roles_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <div class="role" data-children="{{ attribute(role_hierarchy, child.vars.value)|json_encode() }}">
            {{ form_widget(child) }}
            {{ form_label(child) }}
        </div>
    {% endfor %}
    </div>
    
    {% if form|length > 0 %} 
        <div class="dp-security-roles-toggler">
            <input type="checkbox" name="all-roles-toggler" id="all-roles-togler-{{ form.vars.name }}" />
            <label for="all-roles-togler-{{ form.vars.name }}">Tout cocher/d√©cocher</label>
        </div>
    {% endif %}
    
    <script type="text/javascript">
        $(function () {
            $('.dp-security-roles .role input[type=checkbox]').bind('click', function () {
                var el = $(this);
                
                if (this.checked) {
                    if (el.parent().attr('data-children').length > 0) {
                        var children = $.parseJSON(el.parent().attr('data-children'));
                        
                        children.forEach(function (el, id) {
                            $('input[type=checkbox][value=' + el + ']').attr('checked', 'checked');
                        });
                    }
                }
            });
            
            $('.dp-security-roles-toggler input[type=checkbox]').bind('click', function () {
                var checked = this.checked;
                
                $(this).parent().prev('div').find('input[type=checkbox]:not([disabled=disabled])').each(function (id, el) {
                    if (checked) {
                        $(el).attr('checked', checked);
                    }
                    else {
                        $(el).removeAttr('checked');
                    }
                });
            });
        });
    </script>
{% endspaceless %}
{% endblock dp_security_roles_widget %}

{% block form_errors %}
{% spaceless %}
    {% if form.parent is empty and form.vars.errors|length > 0 %}
        <div class="alert alert-error"><ul>
            {% for error in form.vars.errors %}
                <li>
                    {% if error.messagePluralization is null %}
                        {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}
                    {% else %}
                        {{ error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators') }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul></div>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}
